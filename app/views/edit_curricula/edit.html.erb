
<div>
  <%= form_for :edit_curriculum, :url => edit_curriculum_path, :role => "form", :method => :post do |f| %>
  <div class="col-md-4">
    <%= f.label :cur_name %>
    <%= f.text_field :cur_name, type:"text", placeholder:@curricula.cur_name, class:"form-control", :autofocus => true %>
    <br>

    <%= f.label :cur_description %>
    <%= f.text_area :cur_description, type:"text", placeholder:@curricula.cur_description, class:"form-control", :autofocus => true %>
    <br>

    <%= submit_tag "Submit", class:"btn btn-primary btn-no-padding"%>
  </div>
  <% end %>

  <div class "">
    <label>  </label>
    <%= form_for :curricula, :url => update_contributors_path, :id=>"users_search", :role =>"add", :method => :get, :remote => true do |f|%>
      <div class="input-group col-md-4 col-md-offset-9">
        <%= text_field_tag :user, params[:user], class:"form-control", placeholder:"Add User",  :autofocus => true %>
        
        <%=hidden_field_tag :curriculum, @curricula.id%>
        <%=hidden_field_tag :task, 'add'%>
        <span class="input-group-btn">
          <%= button_tag "+", class:"btn btn-default" %>
        </span>

      </div>
    <%end%>
    <div id="users"><%= render 'users' %></div>
    <p> </p>

    <h3 class="col-md-4 col-md-offset-2">
      <center>Curriculum Contributors</center>
    </h3>
    <div class="panel panel-default col-md-4 col-md-offset-2">
           
        <div class="list-group" id="contributor_list">
            <%if @contributors.blank?%>
              <div class="list-group-item">No Contributors</div>
            <%else%>
              <%@contributors.each do |c| %>
                <div class="list-group-item" >
                  <h4><%=c.user.username%><%= link_to update_contributors_path(:user => c.user.username, :curriculum => @curricula.id, class: "list-group-item-heading", :task =>'remove'), :remote => true do %>
                    <h5 class="glyphicon glyphicon-minus pull-right"></h5>
                  <% end %> 
                </h4>
              </div>
            <% end %>
          <%end%>
        </div>
      </div>
  </div>
</div>