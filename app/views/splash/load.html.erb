<div class="content">
  <div id="splash-top-row" class="row">

    <div id ="buffer" class="row">

    </div>

    <div class="col-md-6 col-md-offset-1">
      <h1 class="text-color-white">
        Welcome to GitMyCurriculum!<br>
        
      </h1>
    </div>

    <div class="col-md-4 ">
      <%= form_for(resource, :html => {:class => "form-signin"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>

        <div>
        <%= f.text_field :login, type:"text", placeholder:"email or username", class:"form-control", :autofocus => true %>
        </div>  

        <div>
        <%= f.password_field :password, type:"password", placeholder:"password", class:"form-control" %></div>

        <% if devise_mapping.rememberable? -%>
          <div id= "remember-me" class="pull-right"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div>
          <%= f.submit "Sign In", class:"btn btn-primary btn-no-padding" %>
        </div>

      <% end %>
    </div>

  </div>

  <div class="row">
    <div class="container">
    </div>
  </div>
</div>
