<div id="splash-top-row" class="row">
  <div class="col-md-6 col-md-offset-1">
    <h1 class="text-color-white">
      Stop. Collaborate and Listen.<br>
      GitMyCurriculum is an easy decision!
    </h1>
  </div>
  <div class="col-md-4 ">
    <%= form_for(resource, :html => {:class => "form-signin"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <h4 class="form-signin-heading">Sign In</h4>

  <div>
  <%= f.text_field :login, type:"text", placeholder:"email or username", class:"form-control", :autofocus => true %>
  </div>  

  <div>
  <%= f.password_field :password, type:"password", placeholder:"password", class:"form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="pull-right"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Submit", class:"btn btn-primary btn-no-padding" %></div>

    <% end %>
  </div>
</div>

<div class="row">
  <div class="container">
    
    
  </div>
</div>
