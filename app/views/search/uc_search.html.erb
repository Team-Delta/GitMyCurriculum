<div id="Search Results" class="col-md-7 col-md-offset-1">

<%if @numberOfUserMatches==0 && @numberOfCurriculumMatches==0%>
  <h3> No results found for: <%=params[:query]%></h3> <br>
<%else%>
  <h2>Showing results for: <%=params[:query]%></h2> <br>
    <ul>
      <%if @numberOfUserMatches==0%>
        <strong> No Matching Users Found</strong> <br>
      <%else%>
        <div class="well well-users">
        <h2>Users:</h2> <br>
        <% for u in @users%>

          <div class="media">

              <% @email = Digest::MD5.hexdigest(u.email.strip.downcase) %>

              <a class="pull-left" href="#">
              <img src="http://www.gravatar.com/avatar/<%= @email %>?s=64px"/>
              </a>
              <div class="media-body">
                <h4 class="media-heading"><%=u.username%></h4>
                <%=u.name%>

                <button class="btn btn-primary btn-no-padding pull-right" >
                        Add Peer 
                    </button>
              </div>
          </div>
        <% end %>
        </div>
      <% end %>

      <%if @numberOfCurriculumMatches==0%> 
        <strong> No Matching Curriculums Found</strong> <br>
      <%else%>
        <h3>Curriculum:</h3> <br>
        <% for c in @curricula%>
            <li>
            <strong><%= c.cur_name %></strong> <br> <strong><%= c.cur_description%>
            </li>
        <% end %>
      <% end %>
    </ul>
<% end %>
</div>

<div id="filter" class="col-md-2 col-md-offset-1">

  <ul class="list-group">
    <li class="list-group-item">
      <%if @numberOfUserMatches==0%>
        <span class="badge"><%=@numberOfUserMatches%></span>
      <%else%>
        <span class="badge badge-success"><%=@numberOfUserMatches%></span>
      <% end %>
      <div class="checkbox">
        <label>
          <input type="checkbox" value="userFilter">
          <h4>Users</h4>
        </label>
    </div>
    </li>

    <li class="list-group-item">
      <%if @numberOfCurriculumMatches==0%>
        <span class="badge"><%=@numberOfCurriculumMatches%></span>
      <%else%>
        <span class="badge badge-success"><%=@numberOfCurriculumMatches%></span>
      <% end %>

      <div class="checkbox">
        <label>
          <input type="checkbox" value="curribulumFilter">
          <h4>Curricula</h4>
        </label>
    </div>
    </li>

    <ul class="list-group">
    <li class="list-group-item">
      <%if @numberOfUserMatches==0%>
        <span class="badge"><%=@numberOfUserMatches%></span>
      <%else%>
        <span class="badge badge-success"><%=@numberOfUserMatches%></span>
      <% end %>
      <div class="checkbox">
        <label>
          <input type="checkbox" value="userFilter">
          <h4>Organizations</h4>
        </label>
    </div>
    </li>
  </ul>
</div>
