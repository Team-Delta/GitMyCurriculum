
<div class="col-md-10 col-md-offset-2">
<div class="col-md-3">
    <center>
    <img id="avatar" src="http://www.gravatar.com/avatar/<%= @user.email %>?s=200px" />
  </center>
    <br>
    <br>
  <div class="panel panel-default">

            <div class="panel-heading" style="padding-bottom: 20px;">
                Peers
                <%if current_user%>
                <%if !@is_peer.blank?%>
                  <%= link_to "Unfollow", users_unfollow_path(:username => @user.username) %>
                <%else%>
                  <%= link_to "Follow", users_follow_path(:username => @user.username) %>
                <%end%>
                <%end%>
            </div>    

            <div class="list-group">
               <%@peers.each do |peer| %>
                  <div class="list-group-item"><%= link_to(peer.name, users_show_path(:username => peer.username))%></div>
                <% end %>
            </div>
        </div>
</div>

<div class="col-md-6">

   <div class="panel panel-default">

      <div id="profile-panel-heading" class="panel-heading">

         <div class="panel-title">

            <div float=left>

               <strong><%= @user.name %></strong><br><%= @user.username %>

            </div>
           
         </div>

      </div>

      <div class="panel-body">
         <h4>Description</h4>
         <%= @user.description %>

         <hr>

         <h4>Occupation</h4>
         <%= @user.occupation %>

      </div> 

   </div>
   <div class="panel panel-default">

            <div class="panel-heading" style="padding-bottom: 20px;">
                Curricula
                
            </div>   
            <div class="list-group">
              <%if @created_curricula.blank?%>
              <a class="list-group-item">
                  <h4 class="list-group-item-heading">No Curriculum</h4>
              </a>
              <%else%>
                <% for c in @created_curricula %>
                <a href="/curricula/cur_edit" class="list-group-item">
                    <h4 class="list-group-item-heading"><%=c.cur_name%></h4>
                </a>
                <%end%>
              <%end%>
            </div>
            
        </div>
  <% if !@contributed_curricula.blank? %>      
  <div class="panel panel-default">

            <div class="panel-heading" style="padding-bottom: 20px;">
                Curricula Contributed To
                
            </div>   
            <div class="list-group">
                <% for c in @contributed_curricula %>
                <a href="/curricula/cur_edit" class="list-group-item">
                    <h4 class="list-group-item-heading"><%=c.curricula.cur_name%></h4>
                </a>
                <%end%>
            </div>
            
        </div>
    <%end%>

</div>