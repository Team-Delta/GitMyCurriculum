<div class="container">
  <div class="col-md-4">
    <center>
      <img id="avatar" src="http://www.gravatar.com/avatar/<%= @email %>?s=200px" />
    </center>
    <center>
      <h3><%= @user.username %></h3>
      <h5> Member since: <%=@month%> <%=@day%>, <%=@year%></h5>
      <div class="panel-heading" style="padding-bottom: 20px;">
        <% if current_user %>
          <% if !@is_peer.blank? %>
            <%= link_to "Unfollow", users_unfollow_path(:username => @user.username), class:"btn btn-danger btn-lg btn-block" %>
          <% else %>
            <%= link_to "Follow", users_follow_path(:username => @user.username), class:"btn btn-primary btn-lg btn-block" %>
          <% end %>
        <% end %>
      </div>  
    </center>
  </div>

  <div class="col-md-8">
    <ul class="nav nav-pills nav-justified">
      <li class="<%= if (params[:tab] == 'info' || !params[:tab])then 'active'  else '' end%>">
        <a href="#info" data-toggle="tab">
          <span class="glyphicon glyphicon-th"></span> 
          Info
        </a>
      </li>
      <li class="<%= if params[:tab] == 'curricula' then 'active'  else '' end%>">
        <a href="#curricula" data-toggle="tab">
          <span class="glyphicon glyphicon-list-alt"></span> 
          Curricula
        </a>
      </li>
      <li>
        <a href="#peers" data-toggle="tab">
          <span class="glyphicon glyphicon-user"></span>
          <span class="glyphicon glyphicon-user"></span>     
          Peers
        </a>
      </li>
    </ul><!--creating tabs-->

    <!-- Tab panes -->
    <div class="tab-content">
      
      <hr class="hr-margins">

      <div class="<%= if (params[:tab] == 'info' || !params[:tab])then 'tab-pane active'  else 'tab-pane' end%>" id="info"> 

        <div class="panel panel-default">

          <div class="panel-heading" style="padding-bottom: 20px;">
            <strong><%= @user.name %></strong>
            <br>
            <%= @user.username %>
          </div>

          <div class="panel-body">
            <h4>Description</h4>
            <%= @user.description %>
            <hr>
            <h4>Occupation</h4>
            <%= @user.occupation %>
          </div>

        </div>

      </div>

      <div class="<%= if params[:tab] == 'curricula' then 'tab-pane active'  else 'tab-pane' end%>" id="curricula">

        <div class="panel panel-default">

          <div class="panel-heading" style="padding-bottom: 20px;">
            Curricula
          </div> 


          <div class="list-group">

            <%if @created_curricula.blank?%>
              <a class="list-group-item">
                <h4 class="list-group-item-heading">No Curriculum</h4>
              </a>
            <%else%>
              <% for c in @created_curricula %>
                <div class="list-group-item">
                  <%= link_to(c.cur_name, curricula_path(:id => c.id))%>
                  <button class="btn btn-primary btn-no-padding pull-right" >
                  <% if current_user %>
                    <% @followed_curricula = FollowingCurricula.joins(:curricula).where('user_id=? AND curricula_id=?', current_user.id, c.id) %>
                    <% if !@followed_curricula.blank? %>
                      <%= link_to "Unfollow", users_c_unfollow_path(:curname => c.cur_name, :username => @user.username), :class => "no-link-white" %>
                    <% else %>
                      <%= link_to "Follow", users_c_follow_path(:curname => c.cur_name, :username => @user.username), :class => "no-link-white" %>
                    <% end %>
                  <% end %>
                </button>
                </div>
              <%end%>
            <%end%>

          </div>

        </div> 

      </div>

      <div class="tab-pane" id="peers">

        <div class="panel panel-default">

          <div class="panel-heading" style="padding-bottom: 20px;">
            Peers
          </div>    

          <div class="list-group">
            <%@peers.each do |peer| %>
              <div class="list-group-item">
                <%= link_to(peer.name, users_show_path(:username => peer.username))%>

              </div>
            <% end %>
          </div>

        </div>

      </div>

    </div> <!--end of tabs info-->
  </div>
</div>
