<%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name), title:"Click this to sign in", rel:"tooltip" %>
  <br>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), title:"Click this if you forgot your password", rel:"tooltip" %>
  <br>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), title:"Click this if you didn't recieve your confirmation", rel:"tooltip" %>
  <br>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), title:"Click this if you didn't recieve unlock instructions", rel:"tooltip" %>
  <br>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), title:"Click this to sign in as an organization", rel:"tooltip" %>
    <br>
  <% end -%>
<% end -%>
