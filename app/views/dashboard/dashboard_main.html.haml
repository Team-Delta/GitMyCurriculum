%main
    .col-md-5
        %h2 Notifications:
        %hr

    .col-md-4.col-md-offset-3
        - if !@contributed_curricula.blank?

            .panel.panel-default
                .panel-heading Curricula Contributed To
                .list-group
                    - for c in @contributed_curricula
                        = link_to curricula_path(:id => c.curricula.id) do
                            %h4{:class => 'list-group-item-heading'}= c.curricula.cur_name

        .panel.panel-default
            .panel-heading
                Curricula
                %a{:href => "/curricula/create"}
                    %button.btn.btn-success.btn-sm.pull-right Create Curriculum
            .list-group

                - if @created_curricula.blank?
                    .list-group-item
                        %h4.list-group-item-heading No Curriculum

                - else
                    - for c in @created_curricula
                        =link_to curricula_path(:id => c.id), class: "list-group-item" do
                            %h4.list-group-item-heading= c.cur_name
