<div class="col-md-4 ">
      <%= form_for :curricula, :url => curricula_create_path, :role => "form", :method => :post do |f| %>

        <div class="form-group">
          <%= f.text_field :cur_name, type:"text", placeholder:"name", class:"form-control", :autofocus => true %>
        </div>  

        <div class="form-group">
          <%= f.text_area :cur_description, type:"text", placeholder:"description", class:"form-control", :autofocus => true %>
        </div>

        <div class="form-group">
          <%= f.submit "Create", class:"btn btn-primary btn-no-padding" %>
        </div>

      <% end %>

    </div>