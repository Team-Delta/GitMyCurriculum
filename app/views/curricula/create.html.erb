<div class="col-md-4 ">
      <%= form_tag :create_curriculum, :role => "form", :method => :post do %>

        <div class="form-group">
          <%= text_field_tag :cur_name, params[:cur_name], type:"text", placeholder:"name", class:"form-control", :autofocus => true %>
        </div>  

        <div class="form-group">
          <%= text_field_tag :cur_description, params[:cur_description], type:"text", placeholder:"description", class:"form-control", :autofocus => true %>
        </div>

        <div class="form-group">
          <%= submit_tag "Create", class:"btn btn-primary btn-no-padding" %>
        </div>

      <% end %>

    </div>