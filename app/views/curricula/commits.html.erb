<div class="container">

  <div class="panel panel-info">
    <div class="panel-heading">Change History For: <%= @curriculum.cur_name %></div>
    <ul class="list-group">
      <% for c in @commits %>
        <li class="list-group-item">
          <div class="row">
            <div class="col-md-6">
              <h4>
                <%= c.message %>
              </h4>
            </div>
            <div class="col-md-6">
              <%= link_to "Delete Save", revert_save_path(:id => @curriculum.id, :commit_id => c.sha), class:"btn btn-danger pull-right" %>
            </div>
          </div>
          Authored By: 
          <strong>
            <%= c.author.name %>
          </strong> 
          on 
          <strong>
            <%= c.author.date.strftime("%m-%d-%y") %>
          </strong>
          <div class="pull-right">
            Change ID: 
            <%= c %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

