<div class="container">
  <div class="col-md-4">
      <center>
        <img id="avatar" src="http://www.gravatar.com/avatar/<%= @email %>?s=200px" />
      </center>
      <center>
      <h3><%= current_user.username %></h3>
      <h4><%= current_user.name %></h4>
      <h5>Member since: <%=@month%> <%=@day%>, <%=@year%></h5>
      </center>
    </div>
  <div class="col-md-8">
    <ul class="nav nav-pills nav-justified">
      <li class="active">
        <a href="#info" data-toggle="tab">
          <span class="glyphicon glyphicon-th"></span>
          Info
        </a>
      </li>
      <li>
        <a href="#curricula" data-toggle="tab">
          <span class="glyphicon glyphicon-list-alt"></span>
          Curricula
        </a>
      </li>
      <li>
        <a href="#messages" data-toggle="tab">
          <span class="glyphicon glyphicon-pencil"></span>
          Curricula Contributed To
        </a>
      </li>
      <li>
        <a href="#peers" data-toggle="tab">
          <span class="glyphicon glyphicon-user"></span>
          <span class="glyphicon glyphicon-user"></span>
          Peers
        </a>
      </li>
    </ul><!--creating tabs-->

    <!-- Tab panes -->
    <div class="tab-content">
      <hr class="hr-margins">

      <div class="tab-pane active" id="info"> 
        <div class="panel panel-default">
          <div class="panel-heading" style="padding-bottom: 20px;">
            <%= current_user.username %>
            <%= link_to "Edit Profile", edit_user_registration_path, class:"btn btn-default pull-right" %> 
          </div>

          <div class="panel-body">
            <h4>Description</h4>
            <%= current_user.description %>
            <hr>
            <h4>Occupation</h4>
            <%= current_user.occupation %>
          </div>
        </div>
      </div>

      <div class="tab-pane" id="curricula">
        <div class="panel panel-default">
          <div class="panel-heading" style="padding-bottom: 20px;">
            Curricula
            <a href="/curricula/create">
              <button class="btn btn-default pull-right" >
                Create Curriculum 
              </button>
            </a>
          </div> 
          <div class="list-group">
            <%if @created_curricula.blank?%>
              <a class="list-group-item">
                <h4 class="list-group-item-heading">No Curricula</h4>
              </a>
            <%else%>
              <% for c in @created_curricula %>
                <div class="list-group-item">
                  <%= link_to(c.cur_name, curricula_path(:id => c.id))%>
                </div>
              <%end%>
            <%end%>
          </div>
        </div> 
      </div>

      <div class="tab-pane" id="messages"> 
        <% if !@contributed_curricula.blank? %>      
          <div class="panel panel-default">
            <div class="panel-heading" style="padding-bottom: 20px;">
              Curricula Contributed To
            </div>   
            <div class="list-group">
              <% for c in @contributed_curricula %>
                <div class="list-group-item">
                  <%= link_to(c.curricula.cur_name, curricula_path(:id => c.id))%>
                </div>
              <%end%>
            </div>

          </div>
        <%end%>
      </div>

      <div class="tab-pane" id="peers">
        <div class="panel panel-default">
          <div class="panel-heading" style="padding-bottom: 20px;">
            Peers
          </div>
          <div class="list-group">
            <%@peers.each do |peer| %>
              <div class="list-group-item"><%= link_to(peer.name, users_show_path(:username => peer.username))%></div>
            <% end %>
          </div>
        </div>
      </div>

    </div> <!--end of tabs info-->
  </div>
</div>
