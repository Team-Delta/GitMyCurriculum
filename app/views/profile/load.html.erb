<div class="col-md-2 col-md-offset-2">

   <img id="avatar" src="http://www.gravatar.com/avatar/<%= @email %>?s=200px" />

</div>

<div class="col-md-6">

   <div class="panel panel-default">

      <div id="profile-panel-heading" class="panel-heading">

         <div class="panel-title">

            <%= current_user.username %>
            <%= link_to "Edit Profile", edit_user_registration_path, class:"btn btn-success pull-right no-link-white" %>
           
         </div>

      </div>

      <div class="panel-body">
         <h4>Description</h4>
         <%= current_user.description %>

         <hr>

         <h4>Occupation</h4>
         <%= current_user.occupation %>
         <%= render partial: "shared/flash_messages", flash: flash %> 
         <%= devise_error_messages! %>
      </div> 

   </div>

</div>
