<div class="col-md-10 col-md-offset-2">
  <div class="col-md-3">
    <center>
      <img id="avatar" src="http://www.gravatar.com/avatar/<%= @email %>?s=200px" />
    </center>
    <br>
    <br>
    <div class="panel panel-default">

            <div class="panel-heading" style="padding-bottom: 20px;">
                Peers
            </div>    

            <div class="list-group">
               <%@peers.each do |peer| %>
                  <div class="list-group-item"><%= link_to(peer.name, users_show_path(:username => peer.username))%></div>
                <% end %>
            </div>
        </div>
  </div>
<div class="col-md-6">

   <div class="panel panel-default">

      <div id="profile-panel-heading" class="panel-heading">

         <div class="panel-title">

            <%= current_user.username %>
            <%= link_to "Edit Profile", edit_user_registration_path, class:"btn btn-success pull-right no-link-white" %>
           
         </div>

      </div>

      <div class="panel-body">
         <h4>Description</h4>
         <%= current_user.description %>

         <hr>

         <h4>Occupation</h4>
         <%= current_user.occupation %>


      </div> 

   </div>
   <div class="panel panel-default">

            <div class="panel-heading" style="padding-bottom: 20px;">
                Curricula
                <a href="/curricula/create">
                <button class="btn btn-success pull-right" >
                    Create Curriculum 
                </button>
                </a>
            </div>   
            <div class="list-group">
              <%if @created_curricula.blank?%>
              <a class="list-group-item">
                  <h4 class="list-group-item-heading">No Curriculum</h4>
              </a>
              <%else%>
                <% for c in @created_curricula %>
                  <div class="list-group-item"><%= link_to(c.cur_name, curricula_path(:id => c.id))%></div>
                <%end%>
              <%end%>
            </div>
            
        </div>
  <% if !@contributed_curricula.blank? %>      
  <div class="panel panel-default">

            <div class="panel-heading" style="padding-bottom: 20px;">
                Curricula Contributed To
            </div>   
            <div class="list-group">
                <% for c in @contributed_curricula %>
                  <div class="list-group-item"><%= link_to(c.curricula.cur_name, curricula_path(:id => c.id))%></div>
                <%end%>
            </div>
            
        </div>
    <%end%>
</div>
